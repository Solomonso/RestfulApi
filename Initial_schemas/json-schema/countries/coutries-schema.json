{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "country schema",
  "description": "This schema describes the country list structure",
  "type": "object",
  "properties": {
    "countries": {
      "type": "array",
      "description": "contains a list countries",
      "items": [
        {
          "type": "object",
          "properties": {
            "country": {
              "type": "string",
              "description": "The country description"
            },
            "region": {
              "type": "string",
              "description": "The country of region"
            },
            "population": {
              "type": "integer",
              "minimum": 1,

              "description": "number of population"
            }
          },
          "required": ["country"]
        }
      ]
    }
  }
}
